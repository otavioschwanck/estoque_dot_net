@model IEnumerable<EstoqueDotNet.Data.Entidade.Produto>

@{
    ViewBag.Title = "Listando produtos";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Criar novo", "Create")
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.valor_compra)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.qtd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.valor_venda)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>

        <td>
            @Html.DisplayFor(modelItem => item.nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.valor_compra)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.qtd)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.valor_venda)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {  id=item.id_produtos  }) |
            @Html.ActionLink("Details", "Details", new {  id=item.id_produtos  }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.id_produtos })
        </td>
    </tr>
}

</table>
